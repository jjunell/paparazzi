<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="152" ground_alt="147" lat0="51.990620" lon0="4.376755" max_dist_from_home="150" name="Rotorcraft Basic loop deroutes" security_height="1">
  <header>
#include "autopilot.h"
  </header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0" height="2."/>
    <waypoint name="CLIMB" x="0.0" y="0.0" height="2."/>
    <waypoint name="STDBY" x="0" y="0" height="2."/>
    <waypoint name="p1" x="0" y="3" height="2."/>
    <waypoint name="p2" x="2" y="3" height="2."/>
    <waypoint name="_p3" x="5" y="3" height="2."/>
    <waypoint name="TD" x="2" y="0" height="1"/>
    <waypoint name="variable_wp" x="2" y="0" height="2"/>
  </waypoints>
 <blocks>
    <!--block name="Preset RL">
      <set var="RLact"    value="0"/>
    </block-->
 
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetGroundReferenceHere()"/> 
      <!--call fun="NavSetWaypointHere(WP_HOME)"/>-->
      <!--<call fun="NavSetAltitudeReferenceHere()"/>-->
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 2.0" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay vmode="climb" climb="0.5" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
     <block name="stay_home">
      <stay wp="HOME"/>
    </block>
     <block name="stay_p1">
      <stay wp="p1"/>
    </block>
     <block name="go_p2_stay">
        <go from="p1" wp="p2" hmode="route"/>
        <stay wp="p2"until="stage_time > 6"/>
        <go from="p2" wp="p1" hmode="route"/>
        <deroute block="go_p2_stay"/>   
    </block>
     <block name="increment_p2">
        <call fun="IncrementWaypoint(WP_p1)"/>
        <go from="p1" wp="p2" hmode="route"/>
  <!--      <stay wp="p2" until="stage_time > 3"/> -->
    </block>
   <block name="increment_p1">
        <call fun="IncrementWaypoint(WP_p2)"/>
        <go from="p2" wp="p1" hmode="route"/>
   <!--     <stay wp="p1" until="stage_time > 3"/> -->
        <deroute block="increment_p2"/>
   </block> 
<block name="run_lines">
        <!--set var="RL.act" value="RL.act+1"/-->
   <for var="i" from="1" to="3">
        <call fun="RunLinesWP(WP_p1,WP_p2,_var_i)"/>
        <go from="p2" wp="p1" hmode="route"/>
       <stay wp="p1" until="stage_time > 4"/>
        <go from="p1" wp="p2" hmode="route"/>   
   </for>     
        <deroute block="run_lines"/>
   </block>
<block name="loop_p1_p2">
<!-- while loops are not working for some reason. Ask Erik why not -->
    <while cond="TRUE">
        <go from="p1" wp="p2" hmode="route" />
        <go from="p2" wp="p1" hmode="route"/>
     </while>
</block> 
    <block name="finish">
      <go wp="TD"/>
       <deroute block="land"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-0.8" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
  </blocks>
</flight_plan>
