<!DOCTYPE module SYSTEM "module.dtd">

<module name="detect_reward_4c">
  <doc>
    <description>Detect if there is a reward in view by if a certain color is over a threshold in the bottom facing view </description>
    <define name="DETECTREWARD_CAMERA" value="front_camera|bottom_camera" description="Video device to use"/>
    <define name="DETECTREWARD_FPS" value="0" description="The (maximum) frequency to run the calculations at. If zero, it will max out at the camera frame rate"/>
  </doc>
  
  <settings>
    <dl_settings>
      <dl_settings NAME="detect_reward">
         <dl_setting var="listener->active" min="0" step="1" max="1" shortname="active" />
         <!-- dl_setting var="color_lum_min" min="0" step="1" max="255" shortname="y_min" />
         <dl_setting var="color_lum_max" min="0" step="1" max="255" shortname="y_max" />
         <dl_setting var="color_cb_min"  min="0" step="1" max="255" shortname="u_min" />
         <dl_setting var="color_cb_max"  min="0" step="1" max="255" shortname="u_max" />
         <dl_setting var="color_cr_min"  min="0" step="1" max="255" shortname="v_min" />
         <dl_setting var="color_cr_max"  min="0" step="1" max="255" shortname="v_max" /-->
      </dl_settings>
    </dl_settings>
  </settings>
  
  <depends>video_thread</depends>
  
  <header>
    <file name="detect_reward_4c.h"/>
  </header>
  
  <init fun="detect_reward_4c_init()"/>
  
  <periodic fun="detect_reward_4c_periodic(struct image_t *img)" freq="10"/>
  <makefile>
    <file name="detect_reward_4c.c"/>
  </makefile>
  
</module>
